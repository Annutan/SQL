UPDATE book b
     INNER JOIN author a
     ON a.author_id = b.author_id
     INNER JOIN supply s
     ON b.title = s.title
     AND s.author = a.name_author
SET b.price = (b.price * b.amount + s.price * s.amount) / (b.amount + s.amount),
    b.amount = b.amount + s.amount,
    s.amount = 0
WHERE b.price <> s.price;

SELECT * FROM book;

SELECT * FROM supply;