UPDATE
    fine f, payment p
SET
    f.date_payment = p.date_payment,
    f.sum_fine = IF(DATEDIFF(p.date_payment, f.date_violation) <= 20, f.sum_fine/2, f.sum_fine)
WHERE
    f.date_payment IS NULL
    AND f.name = p.name
    AND f.number_plate = p.number_plate
    AND f.violation = p.violation;

SELECT * FROM fine;




